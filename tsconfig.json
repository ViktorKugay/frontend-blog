{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@atomic/molecules/*": ["src/frontend/components/molecules/*"],
      "@atomic/organisms/*": ["src/frontend/components/organisms/*"],
      "@atomic/templates/*": ["src/frontend/components/templates/*"],
      "@atomic/atoms/*": ["src/frontend/components/atoms/*"],
      "@constants/*": ["src/frontend/constants/*"],
      "@services": ["src/frontend/services"],
      "@context/*": ["src/frontend/context/*"],
      "@hooks/*": ["src/frontend/hooks/*"],
      "@store": ["src/frontend/store"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.js"],
  "exclude": ["node_modules"]
}
